<!DOCTYPE html>
<html lang="en">
  <%- include("partials/head") %>
  <body>
    <%- include("partials/header") %>
    <h2><%= title %></h2>
    <form method="POST">
      <div class="form-group">
        <label for="username" class="form-label">Username:</label>
        <input
          type="text"
          class="form-input"
          name="username"
          id="username"
          required
        />
      </div>
      <div class="form-group">
        <label for="password" class="form-label">Password:</label>
        <input
          type="password"
          class="form-input"
          name="password"
          id="password"
          required
        />
      </div>
      <%- include("partials/formErrors") %>
      <div class="button-group">
        <button type="submit" class="primary-button">Log In</button>
        <a href="/">
          <button class="secondary-button" type="button">Go Back</button>
        </a>
      </div>
    </form>
  </body>
</html>
