<!DOCTYPE html>
<html lang="en">
  <%- include("partials/head") %>
  <body>
    <%- include("partials/header") %>
    <main>
      <h2 class="title"><%= title %></h2>
      <form method="POST" action="<%= actionPath %>">
        <div class="form-group">
          <label for="folder-name" class="form-label">Name:</label>
          <input
            type="text"
            class="form-input"
            name="folderName"
            id="folder-name"
            placeholder="Cool folder name"
            value="<%= invalidInput?.folderName %>"
            required
          />
        </div>
        <%- include("partials/formErrors") %>
        <div class="button-group">
          <button type="submit" class="primary-button button">
            <%= action %>
          </button>
          <a href="/">
            <button class="secondary-button button" type="button">Don't</button>
          </a>
        </div>
      </form>
    </main>
  </body>
</html>
